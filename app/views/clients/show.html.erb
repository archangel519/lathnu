<div id="help-container">
  <p>Having trouble?</p>
  <button id="video1" class="btn orange load-video" type="button" data-fancybox data-src="#video1player"><span>Full Screen Video</span></button>
</div>

<a-scene embedded arjs='debugUIEnabled: false;'> 
	<a-assets>
		<video id="video1player" class="video-player" src='<%= asset_path("videos/#{@client}.mp4") %>' playsinline controls>
      <source src="<%= asset_path("videos/#{@client}.mp4") %>" type='video/mp4'>
      Video not supported.
		</video>
	</a-assets>
  <a-marker type='pattern' url='<%= asset_url("/markers/#{@client}.patt") %>'>
		<a-video id="inputVideo" src="#video1player" rotation="280 0 0" position="0 .2 0"></a-video>
  </a-marker>
  <a-camera-static/>
</a-scene>