<% content_for :title_tag do %>
  <title>Augmented Reality with Firespring and <%= @client.name %></title>
<% end %>
<% content_for :description_tag do %>
  <title>Check out Firespring's work with <%= @client.name %> by going to https://ar.firespring.com/<%= @client.slug %> on your smartphone or tablet.</title>
<% end %>
<% content_for :meta_tags do %>
  <meta property="og:title" content="Augmented Reality with Firespring and <%= @client.name %>" />
  <meta property="og:description" content="Check out Firespring's work with <%= @client.name %> by going to https://ar.firespring.com/<%= @client.slug %> on your smartphone or tablet." />
  <meta property="og:type" content="website" />
  <meta property="og:url" content='<%= "https://ar.firespring.com/#{@client.slug}" %>' />
  <meta property="og:image" content='<%= image_path("fb_#{@client.slug}.jpg") %>' />
<% end %>

<div id="help-container">
  <p>Having trouble?</p>
  <a id="video1" class="btn orange" role="button" href="https://vimeo.com/262276112/3de86f3ddc"><span>Full Screen Video</span></a>
</div>

<a-scene embedded arjs='debugUIEnabled: false;'> 
	<a-assets>
		<video id="video1player" class="video-player" src='<%= asset_path("videos/#{@client.slug}.mp4") %>' preload="auto" playsinline controls></video>
	</a-assets>
  <a-marker type='pattern' url='<%= asset_url("/markers/#{@client.slug}.patt") %>'>
		<a-video id="inputVideo" src="#video1player" rotation="280 0 0" position="0 .2 0"></a-video>
  </a-marker>
  <a-camera-static/>
</a-scene>