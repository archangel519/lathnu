      <source src="<%= asset_path("videos/#{@client}.mp4") %>" type='video/mp4'>
      Video not supported.
		</video>
		end
	</a-assets>
  <a-marker type='pattern' url='<%= asset_url("/markers/#{@client}.patt") %>' mouse-cursor>
		<a-video id="inputVideo" src="#video1player" rotation="80 180 0" position="0 .2 0"></a-video> 
  </a-marker>
  <a-camera></a-camera>
</a-scene>